\newcommand{\env}[2]{
	\begin{#1}
	#2
	\end{#1}
}
\newcommand{\envM}[3]{
	\begin{#2}{#1}
	#3
	\end{#2}
}

\NewDocumentCommand{\Env}{ O{} m m }{
	\ifstrempty{#1}{
		\env{#2}{#3}
	}{
		\envM{#1}{#2}{#3}
	}
}

\newcommand{\Equation}[1]{\Env{equation}{#1}}

\newcommand{\Gather}[1]{\Env{gather}{#1}}

% Dangerous
% \renewcommand{\gather}[1]{\Env{gather}{#1}}

\newcommand{\Cases}[1]{\Env{cases}{#1}}

\NewDocumentCommand{\Array}{ O{.} O{.} m m }{
\left#1
\Env[#3]{array}{#4}
\right#2
}

\newcommand{\Pmatrix}[1]{\Env{pmatrix}{#1}}

\newcommand{\Enum}[1]{\Env{enumerate}{#1}}
